{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Namefix Menu Bar",
  "version": "0.1.0",
  "identifier": "com.namefix.menubar",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "menu-bar"
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Namefix > Preferences",
        "visible": true,
        "width": 480,
        "height": 640,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "resources": [
      "resources/service-bridge.mjs"
    ]
  }
}
