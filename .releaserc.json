{
	"branches": ["main"],
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "node scripts/set-version.mjs ${nextRelease.version} && pnpm run build && pnpm -C apps/menu-bar run tauri:build && node scripts/collect-artifacts.mjs"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"CHANGELOG.md",
					"package.json",
					"apps/menu-bar/package.json",
					"apps/menu-bar/src-tauri/tauri.conf.json",
					"apps/menu-bar/src-tauri/Cargo.toml",
					"apps/menu-bar/src-tauri/Cargo.lock"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{ "path": "artifacts/*.dmg", "label": "Namefix macOS disk image" },
					{ "path": "artifacts/*.app.zip", "label": "Namefix macOS app bundle (zip)" },
					{ "path": "artifacts/*.zip", "label": "Additional binaries" },
					{ "path": "artifacts/*.tar.gz", "label": "Additional archives" }
				]
			}
		]
	]
}
