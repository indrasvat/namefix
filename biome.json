{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"apps/menu-bar/dist/**",
			"apps/menu-bar/src-tauri/target/**",
			"apps/menu-bar/src-tauri/gen/**",
			"dist/**",
			".codemap/**"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
